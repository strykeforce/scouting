<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_scout_main"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="org.strykeforce.scoutapp.MainActivity">


    <Button
        android:id="@+id/donebutton"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_x="180dp"
        android:layout_y="362dp"
        android:text="done"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="732dp"
        tools:layout_editor_absoluteY="102dp" />

    <CheckBox
        android:id="@+id/adjustCOG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="175dp"
        android:scaleX="2.00"
        android:scaleY="2.00"
        android:text="Centered on Bar"
        android:textColor="?attr/colorAccent"
        android:textColorLink="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="90dp" />

    <CheckBox
        android:id="@+id/climb"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_x="248dp"
        android:layout_y="106dp"
        android:scaleX="2.00"
        android:scaleY="2.00"
        android:text="Climbed"
        android:textColor="?attr/colorAccent"
        android:textColorLink="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="90dp" />

    <ListView
        android:id="@+id/screenTabs"
        android:layout_width="160dp"
        android:layout_height="553dp"
        android:layout_x="0dp"
        android:layout_y="11dp"
        android:textSize="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_x="220dp"
        android:layout_y="258dp"
        android:text="Climb Time"
        android:textColor="?attr/colorAccent"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="830dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/timeDisplay"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_x="507dp"
        android:layout_y="266dp"
        android:textColor="?attr/colorAccent"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="830dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/title5"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_x="169dp"
        android:layout_y="0dp"
        android:text="Endgame"
        android:textColor="?attr/colorAccent"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="830dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView

        android:id="@+id/match"

        android:layout_width="50dp"

        android:layout_height="20dp"

        android:layout_marginEnd="39dp"

        android:layout_x="523dp"

        android:layout_y="0dp"

        android:scaleX="1.75"

        android:scaleY="1.75"

        android:text="Match"

        android:textColor="@android:color/black"

        android:textStyle="normal|bold" />

    <TextView

        android:id="@+id/matchdata"

        android:layout_width="wrap_content"

        android:layout_height="20dp"

        android:layout_marginEnd="79dp"

        android:layout_x="595dp"

        android:layout_y="0dp"

        android:scaleX="1.70"

        android:scaleY="1.70"

        android:text="0"

        android:textColor="@android:color/black"

        android:textStyle="normal|bold" />

    <TextView

        android:id="@+id/scoutDisplay"

        android:layout_width="133dp"

        android:layout_height="35dp"

        android:layout_x="617dp"

        android:layout_y="0dp"

        android:text="Blue 1"

        android:textAlignment="center"

        android:textColor="@android:color/holo_blue_dark"

        android:textSize="30dp"

        android:textStyle="normal|bold" />

    <TextView

        android:id="@+id/team"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginEnd="33dp"

        android:layout_x="759dp"

        android:layout_y="0dp"

        android:scaleX="1.75"

        android:scaleY="1.75"

        android:text="Team"

        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <TextView

        android:id="@+id/teamdata"

        android:layout_width="wrap_content"

        android:layout_height="20dp"

        android:layout_marginEnd="79dp"

        android:layout_x="827dp"

        android:layout_y="0dp"

        android:scaleX="1.70"

        android:scaleY="1.70"

        android:text="0"

        android:textColor="@android:color/black"

        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/climbTime"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_x="655dp"
        android:layout_y="235dp"
        android:text="start"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="273dp" />


</AbsoluteLayout>