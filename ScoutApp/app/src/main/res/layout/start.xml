<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">



    <AbsoluteLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent">



        <TextView

            android:text="Welcome to Scout App, Enter your scout ID and starting match number.\n\n ↓(Scout ID)↓                                                                                                                                                "

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/start"

            android:textStyle="normal|bold"

            android:textSize="26sp"

            android:textAlignment="center"

            android:layout_marginTop="60dp"

            android:layout_x="10dp"

            android:layout_y="40dp"

            android:textColor="@color/zxing_custom_result_view" />



        <TextView

            android:text="Scout ID"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/textView2"

            android:textAlignment="center"

            android:textSize="26sp"

            android:layout_marginTop="54dp"

            android:layout_y="120dp" />



        <TextView

            android:text="Red 3 = 3"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:layout_x="@dimen/scout_side"

            android:layout_y="230dp"

            android:id="@+id/textView7"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:textColor="@color/zxing_viewfinder_laser" />



        <TextView

            android:text="Blue 1 = 4"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:layout_x="@dimen/scout_side"

            android:layout_y="270dp"

            android:id="@+id/textView8"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:textColor="@color/colorPrimary" />



        <TextView

            android:text="Blue 2 = 5"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:layout_x="@dimen/scout_side"

            android:layout_y="310dp"

            android:id="@+id/textView9"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:textColor="@color/colorPrimary" />



        <TextView

            android:text="Blue 3 = 6"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:layout_x="@dimen/scout_side"

            android:layout_y="350dp"

            android:id="@+id/textView10"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:textColor="@color/colorPrimary" />



        <EditText

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:inputType="number"

            android:ems="10"

            android:textSize="22sp"

            android:id="@+id/editText"

            android:layout_x="380dp"

            android:layout_y="150dp"/>



        <TextView

            android:text="Red 1 = 1"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:layout_marginStart="75dp"

            android:id="@+id/textView"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:layout_x="@dimen/scout_side"

            android:layout_y="150dp"

            android:textColor="@color/zxing_viewfinder_laser" />



        <TextView

            android:text="Red 2 = 2"

            android:layout_width="100dp"

            android:layout_height="20dp"

            android:scaleX="1.85"

            android:scaleY="1.75"

            android:textStyle="normal|bold"

            android:id="@+id/textView5"

            android:textAppearance="@style/TextAppearance.AppCompat.Button"

            android:layout_x="@dimen/scout_side"

            android:layout_y="190dp"

            android:textColor="@color/zxing_viewfinder_laser" />



        <Button

            android:text="OK"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginBottom="54dp"

            android:scaleX="1.75"

            android:scaleY="1.70"

            android:id="@+id/button"

            android:layout_x="470dp"

            android:layout_y="360dp" />



        <EditText

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:inputType="number"

            android:ems="10"

            android:textSize="22sp"

            android:id="@+id/editText7"

            android:layout_x="380dp"

            android:layout_y="260dp"

            android:layout_marginTop="24dp" />



        <TextView

            android:text="Starting Match"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/textView3"

            android:textSize="26sp"

            android:textAlignment="center"

            android:layout_y="220dp"/>



    </AbsoluteLayout>

</LinearLayout>